<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.JobFinder01" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color (không cần thiết khi ẩn status bar) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Ẩn status bar -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here -->
    </style>

    <!-- Theme FullScreen (nếu cần cho các activity cụ thể) -->
    <style name="Theme.JobFinder01.FullScreen" parent="Theme.JobFinder01">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>