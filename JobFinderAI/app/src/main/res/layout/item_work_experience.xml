<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Tiêu đề công việc -->
        <TextView
            android:id="@+id/tvJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lập trình viên Java"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            tools:text="Lập trình viên Java" />

        <!-- Tên công ty -->
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ABC Tech"
            android:textSize="14sp"
            android:textColor="#424242"
            tools:text="ABC Tech" />

        <!-- Thời gian -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="01/2020 - 12/2022"
            android:textSize="12sp"
            android:textColor="#757575"
            tools:text="01/2020 - 12/2022" />

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Phát triển ứng dụng web sử dụng Spring Boot và RESTful API."
            android:textSize="14sp"
            android:textColor="#424242"
            tools:text="Phát triển ứng dụng web sử dụng Spring Boot và RESTful API." />
    </LinearLayout>
</androidx.cardview.widget.CardView>