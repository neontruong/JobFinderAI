<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:contentDescription="Logo công ty"
            android:background="@drawable/circle_background"
            tools:src="@drawable/ic_profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lập trình viên Java"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"
                tools:text="Lập trình viên Java" />

            <TextView
                android:id="@+id/tvCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ABC Tech"
                android:textSize="14sp"
                android:textColor="#424242"
                tools:text="ABC Tech" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hà Nội, Việt Nam"
                android:textSize="14sp"
                android:textColor="#424242"
                tools:text="Hà Nội, Việt Nam" />

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$20,000.00"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="#0288D1"
                tools:text="$20,000.00" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnSaveJob"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lưu công việc"
            android:src="@drawable/ic_bookmark_outline"
            tools:src="@drawable/ic_bookmark_outline" />

    </LinearLayout>
</androidx.cardview.widget.CardView>